pipeline{

agent any

 parameters {
        string(name: 'tags', description: 'tags')
        string(name: 'env', description: 'env')
    }

tools {
        maven 'mvn'
        jdk 'JDK'
    }

stages{

       stage ('Initialize') {
            steps {
                    echo "JAVA_HOME = ${JAVA_HOME}"
                    echo "MAVEN_HOME = ${MAVEN_HOME}"
                    echo "${params}"
                    echo "${params.env}"
            }
        }

    stage('Build') {
     steps{
            def env = ${params.env};
            def tags = ${params.tags};
            bat 'mvn clean install -Dcucumber.filter.tags='+tags+' -Dtestenv='+env
        }
    }


    stage('Cucumber Reports'){
        steps{
            cucumber buildStatus: "SUCCESS",
            fileIncludePattern: "**/cucumber.json",
            jsonReportDirectory: 'target'
        }
    }
}

}